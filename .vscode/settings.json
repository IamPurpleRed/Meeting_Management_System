{
    /* Language Setting */
    "[html]": {
        "editor.tabSize": 2,
        "editor.defaultFormatter": "HookyQR.beautify"
    },
    "[css]": {
        "editor.tabSize": 2
    },

    /* Beautify */
    "beautify.config": {
        "indent_size": 2,
        "end_with_newline": true,
        "extra_liners": [],
        "js": {
            "indent_size": 4
        },
    },

    /* TODO tree */
    "todo-tree.general.tags": [
        "TODO",
        "FIXME",
        "BUG",
        "DONE",
        "SOLVED",
        "NOTE",
        "INFO"
    ],
    "todo-tree.highlights.defaultHighlight": {
        "foreground": "#fff",
        "type": "line"
    },
    "todo-tree.highlights.customHighlight": {
        "TODO": {
            "background": "#FF8000",
            "icon": "list-ordered",
            "iconColour": "#FF8000"
        },
        "FIXME": {
            "background": "#c00",
            "icon": "tools",
            "iconColour": "#c00"
        },
        "BUG": {
            "background": "#BB5E00",
            "icon": "bug",
            "iconColour": "#BB5E00"
        },
        "DONE": {
            "background": "#0c0",
            "icon": "check",
            "iconColour": "#0c0"
        },
        "SOLVED": {
            "background": "#090",
            "icon": "issue-closed",
            "iconColour": "#090"
        },
        "NOTE": {
            "background": "#4A4AFF",
            "icon": "repo",
            "iconColour": "#4A4AFF"
        },
        "INFO": {
            "background": "#2894FF",
            "icon": "info",
            "iconColour": "#2894FF"
        }
    },

}